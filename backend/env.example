# Database
MONGODB_URI=mongodb://localhost:27017/bluecity

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Razorpay (PRICING FINALIZED)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
MEMBERSHIP_FEE=700000
MATRIMONY_FEE=40000

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
# For sandbox: use postmaster@sandboxXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.mailgun.org
ADMIN_EMAIL=admin@example.com

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Frontend
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Server
PORT=5000
NODE_ENV=development

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=10
OTP_RATE_LIMIT_WINDOW=15
OTP_RATE_LIMIT_MAX=3
PAYMENT_RATE_LIMIT_WINDOW=1
PAYMENT_RATE_LIMIT_MAX=3

# Background Jobs (Cron)
MATRIMONY_CLEANUP_CRON=0 2 * * *
MATRIMONY_DELETION_GRACE_DAYS=14

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Session Secret
SESSION_SECRET=your_session_secret_change_this_in_production

